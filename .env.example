# GitHub OAuth Configuration
# Copy this file to .env and fill in your credentials

# Development Configuration
GITHUB_CLIENT_ID_DEV=your_dev_client_id_here
GITHUB_CLIENT_SECRET_DEV=your_dev_client_secret_here
GITHUB_CALLBACK_URL_DEV=http://localhost:8000

# Production Configuration
GITHUB_CLIENT_ID_PROD=your_prod_client_id_here
GITHUB_CLIENT_SECRET_PROD=your_prod_client_secret_here
GITHUB_CALLBACK_URL_PROD=https://yourusername.github.io/gitfolio/

# API Configuration
GITHUB_API_BASE_URL=https://api.github.com
GITHUB_GRAPHQL_URL=https://api.github.com/graphql

# App Configuration
APP_NAME=GitFolio
APP_VERSION=1.0.0
